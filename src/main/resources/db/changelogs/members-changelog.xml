<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20250831-1" author="Titieni Paul">
        <createTable tableName="members">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="team_id" type="bigint"/>
            <column name="role" type="varchar(256)"/>
        </createTable>
    </changeSet>

    <changeSet id="20250831-2" author="Titieni Paul">
        <addForeignKeyConstraint  baseColumnNames="user_id"
                                  baseTableName="members"
                                  baseTableSchemaName="public"
                                  constraintName="fk_users-members"
                                  deferrable="true"
                                  initiallyDeferred="true"
                                  onDelete="CASCADE"
                                  onUpdate="RESTRICT"
                                  referencedColumnNames="id"
                                  referencedTableName="users"
                                  referencedTableSchemaName="public"
                                  validate="true"/>

        <addForeignKeyConstraint  baseColumnNames="team_id"
                                  baseTableName="members"
                                  baseTableSchemaName="public"
                                  constraintName="fk_teams_members"
                                  deferrable="true"
                                  initiallyDeferred="true"
                                  onDelete="CASCADE"
                                  onUpdate="RESTRICT"
                                  referencedColumnNames="id"
                                  referencedTableName="teams"
                                  referencedTableSchemaName="public"
                                  validate="true"/>
    </changeSet>
</databaseChangeLog>