<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20250831-1" author="TitieniPaul">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(256)"/>
            <column name="last_name" type="varchar(256)"/>
            <column name="username" type="varchar(256)">
                <constraints unique="true"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints unique="true"/>
            </column>
            <column name="password" type="varchar(256)"/>
            <column name="user_role" type="varchar(256)"/>
            <column name="last_active" type="timestamp"/>
            <column name="active" type="boolean"/>
            <column name="icon_number" type="integer"/>
        </createTable>
    </changeSet>
</databaseChangeLog>