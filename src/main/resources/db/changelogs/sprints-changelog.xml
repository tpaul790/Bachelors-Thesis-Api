<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20250902-1" author="Titieni Paul">
        <createTable tableName="sprints">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="project_id" type="bigint"/>
            <column name="title" type="varchar(256)"/>
            <column name="descripiton" type="varchar(256)"/>
            <column name="created_at" type="timestamp"/>
            <column name="ended_at" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="20250902-2" author="Titieni Paul">
        <addForeignKeyConstraint  baseColumnNames="project_id"
                                  baseTableName="sprints"
                                  baseTableSchemaName="public"
                                  constraintName="fk_projects_sprints"
                                  deferrable="true"
                                  initiallyDeferred="true"
                                  onDelete="CASCADE"
                                  onUpdate="RESTRICT"
                                  referencedColumnNames="id"
                                  referencedTableName="projects"
                                  referencedTableSchemaName="public"
                                  validate="true"/>
    </changeSet>
</databaseChangeLog>